<h1>Create A New Ability</h1>

<div>
<%= form_with model: @ability do |f|  %>
  <ul>
    <label>Ability Name</label>
    <%= f.text_field :name %>
  </ul>
  <ul>
    <label>Ability Type: Write MP or HP</label>
      <%= f.text_field :ability_type %>
  </ul>
  <ul>
    <label>Damage Points</label>
    <%= f.number_field :damage %>
  </ul>

  <%= f.submit %>

<% end %>

<h2> <%= link_to 'Show all abilities', abilities_path %></h2>

</div>
