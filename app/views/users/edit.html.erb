<h1>Rewrite Your Fate</h1>

<div>
<%= form_with model: @user do |f|  %>
<div>
  <label>Change Your Name</label>
  <%= f.text_field :name %>
</div>
<div >
  <label>Change Your Clan</label>
  <%= f.text_field :clan %>
</div>

<div >
  <label>Select your dragon partner(s):</label><br>
  <%= f.collection_check_boxes :'dragon_ids', Dragon.all, :id, :name, include_blank: true %>
</div>

  <%= f.submit %>

<% end %>

</div>
